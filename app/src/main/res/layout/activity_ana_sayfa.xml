<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context="com.example.zeynep.cozcozdurapp.anaSayfa">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/text"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/cikis_yap"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/uyeButtonColor"
        android:text="@string/cikisyap"
        android:textColor="@android:color/white"
        android:layout_marginBottom="180dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/kullaniciSil"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"

        android:text="@string/kullanicisil"
        android:textColor="@android:color/white"
        android:textStyle="bold" />


</LinearLayout>
